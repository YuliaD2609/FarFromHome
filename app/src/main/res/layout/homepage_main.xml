<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Contenitore verticale centrato -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:padding="16dp">

        <!-- Bottone Lista della spesa -->
        <Button
            android:id="@+id/shoppinglistbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lista della spesa"
            android:layout_marginBottom="12dp" />

        <!-- Bottone Dispensa -->
        <Button
            android:id="@+id/pantrybutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dispensa"
            android:layout_marginBottom="12dp" />

        <!-- Bottone Valigia -->
        <Button
            android:id="@+id/suitcasebutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Valigia"
            android:layout_marginBottom="24dp" />

        <!-- TextView per avvisi -->
        <TextView
            android:id="@+id/warningtext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Avvisi dispensa"
            android:gravity="center"
            android:padding="16dp"
            android:layout_marginTop="24dp"
            android:background="#EFEFEF"
            android:textSize="16sp"
            android:textColor="#000000" />
    </LinearLayout>

</RelativeLayout>
